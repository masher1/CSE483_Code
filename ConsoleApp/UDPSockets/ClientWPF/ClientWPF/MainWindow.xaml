<Window x:Class="ClientWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="MessageBox" HorizontalAlignment="Left" Height="49" Margin="346,59,0,0" TextWrapping="Wrap" Text="{Binding Path = MessageBox}" VerticalAlignment="Top" Width="352"/>
        <TextBox x:Name="StatusBox" HorizontalAlignment="Left" Height="105" Margin="64,221,0,0" TextWrapping="Wrap" Text="{Binding Path = StatusBox}" VerticalAlignment="Top" Width="646"/>
        <Button x:Name="ButtonSend" HorizontalAlignment="Left" Margin="100,73,0,0" VerticalAlignment="Top" Width="161" Content="Send" RenderTransformOrigin="-1.027,-0.847" Height="35" Click="ButtonSend_Click"/>


    </Grid>
</Window>
